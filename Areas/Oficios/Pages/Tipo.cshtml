@page
@model GestionWeb.Areas.Oficios.Pages.TipoModel
<div class="row">
    <div class="col">
        <h1>@ViewData["Title"]</h1>
    </div>
    </div>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <table class="table table-sm">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Oficio</th>
                        <th scope="col">Recibido</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Emite</th>
                        <th scope="col">Asunto</th>
                        <th scope="col">...</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oficio in Model.Oficios)
                    {
                    <tr>
                        <th scope="row">@oficio.Numero</th>
                        <td>@oficio.Oficio</td>
                        <td><a href="~/oficios/Fecha?id=@oficio.FechaRecepcion.ToShortDateString()">@oficio.FechaRecepcion.ToShortDateString()</a></td>
                        <td>
                            <a href="~/oficios/Tipo?id=@oficio.IdTipo">@oficio.IdTipoNavigation.Nombre</a>
                        </td>
                        <td>                            
                            <a href="~/oficios/emisores/@oficio.IdEmisor">@oficio.IdEmisorNavigation.Nombre</a>
                        </td>
                        <td>@oficio.Asunto</td>
                        <td><a href="~/oficios/detalles?id=@oficio.Id" class="btn btn-primary">Detalles</a></td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>